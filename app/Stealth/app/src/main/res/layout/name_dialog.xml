<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alert_dialog_shape"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit nickname"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
    <EditText
        android:id="@+id/nickNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the Nickname"
        android:textSize="20dp"
        android:background="@drawable/text_box_shape"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginBottom="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/nameCancelButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/black"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            />
        <Button
            android:id="@+id/nameSaveButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Save"
            android:backgroundTint="@color/black"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>